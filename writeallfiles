#!/bin/bash

if hostname | grep -q black
then
    #echo black
    cp ./i3conflaptop ~/.config/i3/config

    cp ./polybarconflaptop ~/.config/polybar/config

    cp ./bashrclaptop ~/.bashrc

    cp ./vimrc ~/.vimrc
elif hostname | grep -q arcgap
then
    #echo arcgap
    cp ./i3confarch ~/.config/i3/config

    cp ./polybarconfarch ~/.config/polybar/config

    cp ./bashrcarch ~/.bashrc

    cp ./Xresourcesarch ~/.Xresources

    cp ./alacrittyarch.yml ~/.config/alacritty/alacritty.yml

    cp ./picomarch ~/.config/picom.conf

    cp ./vimrc ~/.vimrc
else
    #echo mountains
    cp ./i3conf ~/.config/i3/config

    cp ./polybarconf ~/.config/polybar/config

    cp ./bashrc ~/.bashrc

    cp ./alacritty.yml ~/.config/alacritty/alacritty.yml

    cp ./vimrc ~/.vimrc
fi

