#!/bin/bash

if hostname | grep -q black
then
    #echo black
    sudo cp ./i3conflaptop ~/.config/i3/config

    sudo cp ./polybarconflaptop ~/.config/polybar/config

    sudo cp ./vimrc ~/.vimrc
else
    #echo mountains
    sudo cp ./i3conf ~/.config/i3/config

    sudo cp ./polybarconf ~/.config/polybar/config

    sudo cp ./vimrc ~/.vimrc
fi

